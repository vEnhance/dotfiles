function! DetectVonTemp()
  if stridx(expand('%:p'), '/vondb') != -1
    let b:vimtex_main='/tmp/preview_' . $USER . '/von_preview.tex'
  endif
endfunction
autocmd vimrc BufReadPre *.tex call DetectVonTemp()
