unalternates *
alternates '@evanchen\.cc' '^evanchen@mit\.edu$'

set folder=~/Mail/records/
set header_cache=~/.cache/mutt/records

set smtp_url=`echo smtps://$(cat ~/dotfiles/secrets/mailuser2)@gmail.com@smtp.gmail.com:465`
set smtp_pass = `secret-tool lookup user $(cat ~/dotfiles/secrets/mailuser2) type gmail`
set from = "evanchen@mit.edu"

set imap_user = `echo $(cat ~/dotfiles/secrets/mailuser2)@gmail.com`
set imap_pass = `secret-tool lookup user $(cat ~/dotfiles/secrets/mailuser2) type gmail`
set spoolfile = +Inbox
set postponed = +Drafts

color indicator  brightwhite red
color status     brightwhite red

color sidebar_divider red white
