unalternates *
alternates '@evanchen\.cc' '^evanchen@mit\.edu$'

set folder=~/Mail/records/
set header_cache=~/.cache/mutt/records

set smtp_url=`echo smtps://$(cat ~/secrets/mailuser2)@gmail.com@smtp.gmail.com:465`
set smtp_pass = `secret-tool lookup user $(cat ~/secrets/mailuser2) type gmail`
set from = `echo $(cat ~/secrets/mailuser2)@gmail.com`
unmy_hdr Bcc

set imap_user = `echo $(cat ~/secrets/mailuser2)@gmail.com`
set imap_pass = `secret-tool lookup user $(cat ~/secrets/mailuser2) type gmail`
set spoolfile = +Inbox
set postponed = +Drafts

color indicator  brightwhite red
color status     brightwhite red

color sidebar_divider red white
