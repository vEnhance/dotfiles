#!/usr/bin/env bash

set -euxo pipefail

if [ -f "$HOME/.vim/tmp/$(basename "$2").swp" ]; then
  notify-send -i emblem-link -u low "Linked SyncTeX" "Line $1 of $2"
  nvim --headless -c "VimtexInverseSearch $1 $2"
else
  notify-send -i emblem-link -u low "Spawned SyncTeX" "Line $1 of $2"
  xfce4-terminal -e "nvim +$1 $2" &
fi
